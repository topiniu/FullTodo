<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- 获取用户名的映射 -->
    <servlet>
        <servlet-name>names</servlet-name>
        <servlet-class>FullTodo.servlets.getUsername</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>names</servlet-name>
        <url-pattern>/names</url-pattern>
    </servlet-mapping>

    <!-- 获取待办事项的映射 -->
    <servlet>
        <servlet-name>todolist</servlet-name>
        <servlet-class>FullTodo.servlets.getTodoList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>todolist</servlet-name>
        <url-pattern>/todolist</url-pattern>
    </servlet-mapping>

    <!-- 添加用户的映射 -->
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>FullTodo.servlets.addUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>

    <!-- 添加待办事项的映射 -->
    <servlet>
        <servlet-name>addTodoList</servlet-name>
        <servlet-class>FullTodo.servlets.addTodoList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTodoList</servlet-name>
        <url-pattern>/addtodolist</url-pattern>
    </servlet-mapping>

</web-app>